<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    tools:context="com.example.harshjain.chitchatz.ProfileActivity">

    <TextView
        android:id="@+id/display_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_profile_imae"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Display Name"
        android:textColor="#FFF"
        android:textSize="24dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/display_profile_imae"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/default_avatar" />

    <TextView
        android:id="@+id/display_profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="35dp"
        android:textAlignment="center"

        android:layout_marginRight="35dp"
        android:text="User Status is displayed here"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/profile_send_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_decline_req_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Send Request"
        android:textColor="#FFF" />

    <!--<TextView-->
        <!--android:id="@+id/display_profile_totalfriends"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/display_profile_status"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="64dp"-->
        <!--android:text="Total Friends"-->
        <!--android:textColor="#FFF" />-->

    <Button
        android:id="@+id/profile_decline_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="Decline Friend Request"
        android:textColor="#FFF" />
</RelativeLayout>
